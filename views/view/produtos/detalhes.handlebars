                <tbody>
                    <tr>
                        <td>Id</td>
                        <td>{{produto.id}}</td>
                    </tr>
                    <tr>
                        <td>Nome</td>
                        <td>{{produto.nome}}</td>
                    </tr>
                    <tr>
                        <td>Cod. Produto</td>
                        <td>{{produto.codProduto}}</td>
                    </tr>
                    <tr>
                        <td>Descricao</td>
                        <td>{{produto.descricao}}</td>
                    </tr>
                    <tr>
                        <td>Pre√ßo Unitario</td>
                        <td>{{produto.precoUnitario}}</td>
                    </tr>
                    <tr>
