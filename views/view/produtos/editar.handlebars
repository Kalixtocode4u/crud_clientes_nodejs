<main>
    <section class="container">
        <a href="/produto" class="btn btn-primary mx-0 my-3">Voltar</a>
        <section class="container shadow p-4 rounded">
            <h2>Editar Produto</h2>
            <form action="/api/produto/editar/{{produto.id}}" method="POST" enctype="multipart/form-data">
                <label class="label-control">Nome
                    <input type="text" name="nome" value="{{produto.nome}}" class="form-control">
                </label>
                
                <label class="label-control m-3">Cod. Produto
                    <input type="number" name="codProduto" value="{{produto.codProduto}}" class="form-control">
                </label>

                <label class="label-control m-3">descrição
                    <input type="text" name="descricao" value="{{produto.descricao}}" class="form-control">
                </label>

                <label class="label-control m-3">Preço Unitario
                    <input type="number" name="precoUnitario" value="{{produto.precoUnitario}}" step="0.01" class="form-control">
                </label>

                <label class="label-control m-3">Cliente Id
                    <input type="text" name="clienteId" value="{{produto.clienteId}}" class="form-control">
                </label>

                <button type="submit" class="btn btn-primary m-2">Editar</button>
            </form>
        </section>
    </section>
</main>
<script src="/static/javascript/script.js"></script>