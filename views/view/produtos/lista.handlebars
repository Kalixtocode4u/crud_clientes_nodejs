        <table class="text-center w-100">
            <thead >
                <tr class="p-2">
                    <th class="p-2">Id</th>
                    <th class="p-2">Nome</th>
                    <th class="p-2">Cod Produto</th>
                    <th class="p-2">Descrição</th>
                    <th class="p-2">Preço Unitario</th>
                    <th class="p-2">Quantidade</th>
                    <th class="p-2">Opções</th>
                </tr>
            </thead>
            <tbody>
                {{#each produtos}}
                <tr class="p-2">
                    <td class="p-2">{{this.id}}</td>
                    <td class="p-2">{{this.nome}}</td>
                    <td class="p-2">{{this.codProduto}}</td>
                    <td class="p-2">{{this.descricao}}</td>
                    <td class="p-2">{{this.precoUnitario}}</td>
                    <td class="p-2">{{this.quantidade}}</td>
                    <td class="p-2">
                        <a href="/produto/detalhes/{{this.id}}" class="btn btn-light">Detalhes</a>
                        <a href="/produto/editar/{{this.id}}" class="btn btn-light">Editar</a>
                        <a href="/api/produto/delete/{{this.id}}" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <a href="/produto/criar" class="btn btn-dark m-3">Criar Novo Produto</a>
    </section>
</main>