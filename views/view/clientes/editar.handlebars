<main>
    <section class="container">
        <a href="/cliente" class="btn btn-primary mx-0 my-3">Voltar</a>
        <section class="container shadow p-4 rounded">
            <h2>Editar Cliente</h2>
            <form action="  /api/cliente/editar/{{cliente.id}}" method="POST">
                <label class="label-control">Nome
                    <input type="text" name="nome" value="{{cliente.nome}}" class="form-control">
                </label>
                
                <label class="label-control m-3">Nome Fantasia
                    <input type="text" name="nomefantasia" value="{{cliente.nomefantasia}}" class="form-control">
                </label>

                <label class="label-control m-3">Documento
                    <input type="text" name="documento" value="{{cliente.documento}}" class="form-control">
                </label>

                <label class="label-control m-3">Telefone
                    <input type="text" name="telefone" value="{{cliente.telefone}}" class="form-control">
                </label>

                <label class="label-control m-3">Endere√ßo
                    <input type="text" name="endereco" value="{{cliente.endereco}}" class="form-control">
                </label>

                <label class="label-control m-3">Tipo De Cliente
                    <input type="text" name="tipoCliente" value="{{cliente.tipoCliente}}" class="form-control">
                </label>

                <button type="submit" class="btn btn-primary m-2">Editar</button>
            </form>
        </section>
    </section>
</main>