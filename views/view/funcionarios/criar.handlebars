<main>
    <section class="container">
        <a href="/funcionario" class="btn btn-primary mx-0 my-3">Voltar</a>
        <section class="container shadow p-4 rounded">
            <form action="/api/funcionario" method="POST">
                <h2>Criar Cliente</h2>
                <label class="label-control m-3">Nome
                    <input type="text" name="nome" class="form-control">
                </label>
                
                <label class="label-control m-3">Email
                    <input type="text" name="email" class="form-control">
                </label>

                <label class="label-control m-3">Senha
                    <input type="text" name="senha" class="form-control">
                </label>

                <label class="label-control m-3">Cargo
                    <input type="text" name="cargo" class="form-control">
                </label>

                <label class="label-control m-3">Nivel De Acesso
                    <input type="text" name="tipoDeAcesso" class="form-control">
                </label>


                <button type="submit" class="btn btn-primary my-4">Criar</button>
            </form>
        </section>
    </section>
</main>