        <table class="text-center w-100">
            <thead >
                <tr class="p-2">
                    <th class="p-2">Id</th>
                    <th class="p-2">Data</th>
                    <th class="p-2">Status</th>
                    <th class="p-2">Total</th>
                    <th class="p-2">Opções</th>
                </tr>
            </thead>
            <tbody>
                {{#each pedidos}}
                <tr class="p-2">
                    <td class="p-2">{{this.id}}</td>
                    <td class="p-2">{{this.data}}</td>
                    <td class="p-2">{{this.status}}</td>
                    <td class="p-2">{{this.totalPedido}}</td>
                    <td class="p-2">
                        <a href="/pedido/detalhes/{{this.id}}" class="btn btn-light">Detalhes</a>
                        <a href="/pedido/editar/{{this.id}}" class="btn btn-light">Editar</a>
                        <a href="/api/pedido/delete/{{this.id}}" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <a href="/pedido/criar" class="btn btn-dark m-3">Criar Novo Pedido</a>
    </section>
