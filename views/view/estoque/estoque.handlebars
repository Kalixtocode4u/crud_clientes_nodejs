<main class="container-fluid p-2">
    <h2 class="my-3 ms-5">Estoque</h2>
    <section class="container bg-white p-2 rounded shadow">
        <table class="text-center w-100">
            <thead >
                <tr class="p-2">
                    <th class="p-2">Id</th>
                    <th class="p-2">Nome</th>
                    <th class="p-2">Cod Produto</th>
                    <th class="p-2">Descrição</th>
                    <th class="p-2">Preço Unitario</th>
                    <th class="p-2">Quantidade</th>
                    <th class="p-2">Opções</th>
                </tr>
            </thead>
            <tbody>
                {{#each produtos}}
                <tr class="p-2">
                    <td class="p-2">{{this.id}}</td>
                    <td class="p-2">{{this.Produto.nome}}</td>
                    <td class="p-2">{{this.Produto.codProduto}}</td>
                    <td class="p-2">{{this.Produto.descricao}}</td>
                    <td class="p-2">{{this.Produto.precoUnitario}}</td>
                    <td class="p-2">{{this.quantidade}}</td>
                    <td class="p-2">
                        <a href="/api/estoque/delete/{{this.id}}" class="btn btn-danger">Remover</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <a href="#" class="btn btn-dark m-3" data-bs-toggle="modal" data-bs-target="#estoqueModal">adicionar produto</a>
    </section>
    <section class="modal fade" tab-index="-1" id="estoqueModal" aria-labelledby="estoqueModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Adicionar Produto para o estoque</h2>
                </div>
                <div class="modal-body">
                    <form action="/api/estoque" method="post">
                        <label class="label-control m-3"> escolha o Produto
                            <select name="idProduto" class="form-select">
                                {{#each produto}}
                                <option value="{{this.id}}">{{this.nome}}</option>
                                {{/each}}
                            </select>
                        </label><br>

                        <label class="label-control m-3">Quantidade
                            <input type="number" name="quantidade" class="form-control">
                        </label><br>

                        <button type="button" class="btn btn-danger m-3" data-bs-dismiss="modal">fechar</button>
                        <button type="submit" class="btn btn-success m-3">Concluir</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>